interface MenuItem extends EntryFieldTypes.Symbol<string> {
  contentTypeId: 'menuItem';
  fields: {
    title: EntryFieldTypes.Text;
  };
}

interface MenuCategory {
  contentTypeId: 'menuCategory';
  fields: {
    title: EntryFieldTypes.Text;
    order: EntryFieldTypes.Number;
    menuItems: EntryFieldTypes.Array<MenuItem>;
  };
}

const entries = await contentfulClient.getEntries<MenuCategory>({
  content_type: 'menuCategory',
});

